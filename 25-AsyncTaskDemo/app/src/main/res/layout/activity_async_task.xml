<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:columnCount="3"
    tools:context="com.telecom.asynctaskdemo.AsyncTaskActivity">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_columnSpan="3"

        app:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/task_128"/>


    <Button
        android:id="@+id/button_start"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:drawableRight="@drawable/start_24"
        android:text="开始"
        app:layout_columnWeight="1"/>

    <TextView
        android:id="@+id/percent_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_columnWeight="1"
        tools:text="0"/>

    <Button
        android:id="@+id/button_stop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:drawableLeft="@drawable/stop_24"
        android:enabled="false"
        android:text="结束"
        app:layout_columnWeight="1"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:progressDrawable="@drawable/progress_horizontal"
        app:layout_columnSpan="3"
        app:layout_columnWeight="1"/>

    <TextView
        android:id="@+id/msg_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_columnSpan="3"
        app:layout_columnWeight="1"
        tools:text=""/>

    <ImageView
        android:id="@+id/alarm_image_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_columnSpan="3"
        app:layout_columnWeight="1"
        app:srcCompat="@drawable/alarm_128"/>


    <Button
        android:id="@+id/button_async_task_loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AsyncTaskLoader"
        android:textAllCaps="false"
        app:layout_columnSpan="3"

        app:layout_gravity="center_horizontal"/>
</android.support.v7.widget.GridLayout>
