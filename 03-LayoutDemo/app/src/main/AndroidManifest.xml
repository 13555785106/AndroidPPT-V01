<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.telecom.layoutdemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LayoutActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".LinearLayoutActivity"
            android:label="线性布局">
        </activity>
        <activity
            android:name=".FrameLayoutActivity"
            android:label="帧式布局">
        </activity>
        <activity
            android:name=".RelativeLayoutActivity"
            android:label="相对布局">
        </activity>
        <activity
            android:name=".ConstraintLayoutActivity"
            android:label="约束布局">
        </activity>
        <activity
            android:name=".TableLayoutActivity"
            android:label="表格布局">
        </activity>
        <activity
            android:name=".GridLayoutActivity"
            android:label="网格布局">
        </activity>
        <activity android:name=".TabLayoutActivity"
                  android:label="标签布局">
        </activity>
    </application>

</manifest>