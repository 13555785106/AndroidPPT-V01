<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/grid_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:columnCount="3"
    tools:context="com.telecom.fragmentdemo.ReplaceFragmentActivity">

    <Button
        android:id="@+id/button_banana"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/banana_32"
        android:text="香蕉"
        app:layout_columnWeight="1"/>

    <Button
        android:id="@+id/button_kiwi"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/kiwi_32"
        android:text="猕猴桃"
        app:layout_columnWeight="1"/>

    <Button
        android:id="@+id/button_mango"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/mango_32"
        android:text="芒果"
        app:layout_columnWeight="1"/>

    <Button
        android:id="@+id/button_orange"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/orange_32"
        android:text="橙子"
        app:layout_columnWeight="1"/>

    <Button
        android:id="@+id/button_strawberry"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/strawberry_32"
        android:text="草莓"
        app:layout_columnWeight="1"/>

    <Button
        android:id="@+id/button_watermelon"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/watermelon_32"
        android:text="西瓜"
        app:layout_columnWeight="1"/>

    <LinearLayout
        android:id="@+id/fragment_placeholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_columnSpan="3">
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="视图层次"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_columnSpan="3"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:fadingEdge="vertical"
        android:padding="0dp"
        android:scrollbars="vertical"
        android:background="#dddddd"
        app:layout_columnSpan="3"
        app:layout_rowWeight="1"
        >

        <TextView
            android:id="@+id/msg_text_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:text=""
            />
    </ScrollView>

</android.support.v7.widget.GridLayout>
